---
  import Layout from '../layouts/Layout.astro';
  import { Icon } from 'astro-icon';
---

<Layout title="About Me">
  <div class="flex flex-col justify-center background min-h-screen">
    <div class="bg-[#e5ebe9] absolute top-10 left-10 shadow-xl rounded-xl border border-stone-400 px-4 py-2">
      <a href="/" class="flex justify-center space-x-2">
        <Icon name="bi:arrow-left-circle" class="w-5" />
        <span>Go back home</span>
      </a>
    </div>
    <div class="flex flex-row justify-center">
      <div class="bg-[#e5ebe9] px-6 py-2 border border-stone-400 rounded-xl shadow-xl">
        <p class="text-2xl text-center">
          Left for Coffee<br />
          Will be Back Soon<br />
        </p>
        <p class="text-center">
          <span style="font-size:50px">&#9749</span>
          <span style="font-size:50px">&#9749</span>
          <span style="font-size:50px">&#9749</span>
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .background {
    background-color: #e5ebe9;
    opacity: 0.5;
    background-image: radial-gradient(#000000 1.75px, transparent 1.75px), radial-gradient(#000000 1.75px, #e5ebe9 1.75px);
    background-size: 70px 70px;
    background-position: 0 0, 35px 35px;
    animation: slide 15s linear infinite;
    overscroll-behavior: contain;
  }

  @keyframes slide {
    0% {
      opacity: 1;
    }

    100% {
      opacity: 1;
    }

    from {
      background-position: 0 0;
    }

    to {
      background-position: 0% 100%;
    }
  }
</style>